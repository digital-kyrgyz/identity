@model SignUpDto

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container offset-md-2">
    <h2>Login form</h2>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    <form asp-controller="Home" asp-action="SignUp" method="post">
        <div class="row mb-3">
            <label asp-for="UserName" class="col-md-2 col-form-label"></label>
            <div class="col-md-4">
                <input asp-for="UserName" class="form-control">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="Email" class="col-md-2 col-form-label"></label>
            <div class="col-md-4">
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="Phone" class="col-md-2 col-form-label"></label>
            <div class="col-md-4">
                <input asp-for="Phone" class="form-control">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="City" class="col-md-2 col-form-label"></label>
            <div class="col-md-4">
                <input asp-for="City" class="form-control">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="Password" class="col-md-2 col-form-label">Password</label>
            <div class="col-md-4">
                <input type="password" class="form-control" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="PasswordConfirm" class="col-md-2 col-form-label">Password confirm</label>
            <div class="col-md-4">
                <input type="password" class="form-control" asp-for="PasswordConfirm">
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
        </div>
        <fieldset class="row mb-3">
            <legend class="col-form-label col-sm-2 pt-0">Remember me</legend>
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="radio">
                    <label class="form-check-label">
                        Remember me
                    </label>
                </div>
            </div>
        </fieldset>
        <div class="row mb-3">
            <div class="col-md-8 offset-md-4">
                <button type="submit" class="btn btn-primary">Sign in</button>
            </div>
        </div>
    </form>
</div>